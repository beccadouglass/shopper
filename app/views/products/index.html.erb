<!--Product Cards   -->
 
<h2>
Products </h2>
</br>
</br> 
<div class="container">
  <div class="row">
    <% @product.each do |product| %>
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
      <% if product.image %>
        <%= image_tag product.image.url, class: 'img-fluid' %>
        
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= product.title %></h5>
          <p class="card-text"><%= product.description %></br> <%= number_to_currency product.price %></p>
        
            <%= form_tag additem_path do %>
            <%= hidden_field_tag :product_id, product.id %>
            <%= number_field_tag :quantity, 1, size: 3 %>
            <%= submit_tag "Add to Cart", class: "button2" %>
          
            <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


  
 