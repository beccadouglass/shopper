<table>
  <thead>
    <thead style="border-bottom:1px solid gray">

    <tr>
    <!-- arrange these -->
      <td><h5><strong>Product</strong></h5></td>
      <td><h5><strong>Price</strong></h5></td>
      <td><h5><strong>Quantity</strong><h5></td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.product.title %></td>
      <td><%= number_to_currency item.product.price %></td>
      <td align="center"><%= item.quantity %></td>
      <td> 
        <%= form_for item, method: :delete do |f| %>
        <%= f.submit "Remove" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
</br>
</br>
<div class = "stripe">
<%= form_tag charges_path do %>
          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-email="<%= current_user.email %>"
                  data-description="Chesnut Feather Products"
                  data-amount="<%= (current_order.subtotal * 100).to_i %>"
                  data-locale="auto"></script>
        <% end %>
</div>
