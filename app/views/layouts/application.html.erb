<!DOCTYPE html>
<html>
  <head>
    <title>Shopper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <style>
    @import url('https://fonts.googleapis.com/css?family=Satisfy&display=swap');
    @import url('https://fonts.googleapis.com/css?family=Montserrat&display=swap');
    </style>
  </head>

  <body>
   <div id="flex-content-container">
<!-- new navbar -->
    <div class="main-menu">
      <nav class="navbar navbar-toggleable-md navbar-dark bg-dark">
          <button class="navbar-toggler navbar-toggler-left" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
      <!--<a class="navbar-brand"> <i class="fas fa-feather-alt"></i></a> -->
          <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-md-0">
              <li class="nav-item active">
                <a class="nav-link" <%= link_to "Products", root_path %> <span class="sr-only">(current)</span></a>
                <!-- href="#">Productsn-->
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Log-in</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Log-out</a>
              </li>
              </ul>
              <ul class="navbar-nav ml-auto">
                <i class= <%= link_to pluralize(current_cart.items_count, "fas fa-shopping-cart"), cart_path %> </i>
              </ul>
          </div>
      </nav>
    </div>

    <!-- alerts -->
<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
  <% end %>


    <%= yield %>

  </div>

    <div id="footer">
      <div class="container">
        <b>Footer Here</b>
        <br />
        <%= link_to 'Link', '#' %>
      </div>
    </div>
  </body>
</html>

  
  
  
  
  
  